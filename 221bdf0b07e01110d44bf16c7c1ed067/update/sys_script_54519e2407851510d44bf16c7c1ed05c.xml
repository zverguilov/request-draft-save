        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var enrollment = new GlideRecord('x_463716_rp_draft_rp_enrollment_rule');
	enrollment.addEncodedQuery('item=' + current.getValue('item') + '^ORitemsLIKE' + current.getValue('item'));
	enrollment.query();
	
	if(enrollment.next()) {
		gs.info('zvg ' + current.getValue('multiple_item_enrollment'));
		if(!+current.getValue('multiple_item_enrollment')) gs.addErrorMessage('This item is already enrolled!');
		if(+current.getValue('multiple_item_enrollment')) gs.addErrorMessage('At least one of these items is already enrolled!');
		current.setAbortAction(true);
	}

})(current, previous);]]></script>
